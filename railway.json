{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "buildCommand": "python3 -m JoKeRUB",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "pip install -r requirements.txt",
    "sleepApplication": false,
    "restartPolicyType": "ALWAYS"
  }
}
